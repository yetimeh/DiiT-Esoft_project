<Window x:Class="esoftprojecttest.Dashbord_Screen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:esoftprojecttest"
        mc:Ignorable="d" WindowStyle="None" WindowStartupLocation="CenterScreen" AllowsTransparency="True" Background="Transparent"
        Title="Dashbord_Screen" Height="600" Width="1100">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.4*"/>
            <ColumnDefinition Width="1.8*"/>
        </Grid.ColumnDefinitions>

        <Image Source="../Resources/close.png" Grid.Column="1" Panel.ZIndex="1"  Style="{StaticResource imgClose}" RenderTransformOrigin="0.473,0.558"></Image>

        <Border CornerRadius="10 0 0 10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#0099cc" Offset="1"/>
                    <!-- <GradientStop Color="#3AADA1" Offset="1"/> -->
                </LinearGradientBrush>
            </Border.Background>

            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="SaleSync &#10; POS" Style="{StaticResource ResourceKey=titleText}" Foreground="#ffffff" RenderTransformOrigin="0.5,0.5" FontSize="30" Height="96"/>
                <!-- <Button Content="Dashbord" Style="{StaticResource dashbordbuttons}"></Button> -->
                <Button Click="admin_inventory_click" Content="Inventory" Style="{StaticResource dashbordbuttons}"></Button>
                <Button Click="admin_history_click" Content="History" Style="{StaticResource dashbordbuttons}"></Button>
                <Button Click="admin_my_profile_click" Content="My Profile" Style="{StaticResource dashbordbuttons}"></Button>

            </StackPanel>
        </Border>

        <Border Background="#ffffff" Grid.Column="1" CornerRadius="0 10 10 0">
            <Grid>
                <Button Click="admin_logout_click" Content="Logout" Width="200"  VerticalAlignment="Top" Style="{StaticResource dashbordbuttons}" Margin="226,318,474,0"></Button>
                <Button Click="admin_signup_click" Content="Create a new adminstrator account" Width="NaN"  VerticalAlignment="Top" Style="{StaticResource dashbordbuttons}" Margin="502,318,136,0"></Button>

                <TextBlock  Text="Admin - Dashboard" Style="{StaticResource titleText}" Foreground="Black"></TextBlock>
                <StackPanel Margin="10 20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="0.5*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock  TextWrapping="WrapWithOverflow" Grid.ColumnSpan="2" Margin="119,140,101,-289" FontSize="30">
                                Welcome admin {username}! 
                                You can select your action from the list to the left!
                        </TextBlock>


                    </Grid>
                    <!-- <StackPanel>
                        <TextBox x:Name="ItemCode" Width="200" Height="30" HorizontalAlignment="Left" Margin="30 8" ></TextBox>
                        <TextBox x:Name="ItyemName" Width="200" Height="30" HorizontalAlignment="Left"  Margin="30 8"></TextBox>
                        <TextBox x:Name="price" Width="200" Height="30"  HorizontalAlignment="Left"  Margin="30 8"></TextBox>
                        <TextBox x:Name="quantity" Width="200" Height="30" HorizontalAlignment="Left"  Margin="30 8"></TextBox>

                        <Button Content="Enter" Style="{StaticResource mainbutton}"></Button>
                        
                    </StackPanel>  -->
                </StackPanel>
            </Grid>


        </Border>

    </Grid>
</Window>
